{
    "version": "1.0.0",
    "manifest_version": 3,
    "name": "leekcake",
    "description": "checkout leetcode problems automatically in github",
    "action": {
        "default_popup": "index.html",
        "default_title": "React Chrome Extension"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "cookies",
        "tabs",
        "notifications",
        "storage",
        "identity"
    ],
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["content.js"]
        }
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "*://*/*"
    ]
}
